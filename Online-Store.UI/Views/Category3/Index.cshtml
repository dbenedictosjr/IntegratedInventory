@model IEnumerable<System.Infrastructure.Models.Category3Model>

@{
    ViewData["Title"] = "Index";
}
<br />
<div class="row">

    <div class="col-lg-6">

        <h4>Category 3</h4>
    </div>

    <div class="col-lg-3">

    </div>
    <div class="col-lg-1">

        <a asp-action="" class="btn btn-success pull-left"><i class="fa fa-download">  Export </i></a>


    </div>
    <div class="col-lg-1">

    </div>
    <div class="col-lg-1">

        <a asp-action="Create" class="btn btn-primary pull-right"><i class="fa fa-plus"> Create New</i></a>


    </div>


</div>
<hr />

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Category 3 List
            </div>
            <div class="panel-body">
                <div class="dataTable_wrapper table-responsive">
                    <table  id="tbl_category3" class="table table-striped table-bordered table-hover  display nowrap">
                        <thead>
                            <tr>
                                <th>
                                    <input type="checkbox" value="1" id="chkcat3_all">
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Code)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Cat2Description)
                                </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                <td>
                                    <input type="checkbox" value="1" class="checkbox">
                                </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Code)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cat2Description)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

