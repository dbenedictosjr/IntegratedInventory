@model IEnumerable<System.Infrastructure.Models.Category1Model>

@{
    ViewData["Title"] = "Index";
}


<div class="row">

    <div class="col-lg-6">
        <h1>Category 1 List</h1>
    </div>

    <div class="col-lg-4">

    </div>
    <div class="col-lg-2">
        <a asp-action="Create" class="btn btn-primary page-header"><i class="glyphicon-plus"> Create New</i></a>

    </div>


</div>
<hr />
<div class="row">
 
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
