@model System.Infrastructure.Models.Category2Model

@{
    ViewData["Title"] = "Create";
}
 
 
<div class="row">

    <div class="col-lg-6">
        <br />
        <h4>Category 2</h4>
    </div>

    <div class="col-lg-3">

    </div>
    <div class="col-lg-3">
        <br />
        <i class="fa fa-arrow-circle-left pull-right">  <a asp-action="index" class="pull-right">  Back to Category 2 List</a></i>

    </div>


</div>
<hr />

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Create  Category 2
            </div>
            <div class="panel-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-lg-6">

                            <div class="form-group">

                                <label asp-for="Code" class="control-label"></label>
                                <input asp-for="Code" class="form-control" />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>

                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <div class="row">
                        <div class="col-lg-6">

                            <div class="form-group">
                                <label asp-for="Cat1ID" class="control-label"></label>
                                <select asp-for="Cat1ID" class="form-control" asp-items="ViewBag.Category1"></select>
                            </div>

                        </div>
                        
                    </div>
                    <div class="row">
                        <div class="col-lg-6">

                            

                        </div>
                        <div class="col-lg-6">

                            <button type="submit" class="btn btn-primary pull-right">Create</button>

                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </form>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}