@model IEnumerable<System.Infrastructure.Models.ProductModel>

@{
    ViewData["Title"] = "Index";
}

<br />
<div class="row">

    <div class="col-lg-6">

        <h4>Product</h4>
    </div>

    <div class="col-lg-3">

    </div>
    <div class="col-lg-1">

        <a asp-action="" class="btn btn-success pull-left"><i class="fa fa-download">  Export </i></a>


    </div>
    <div class="col-lg-1">

    </div>
    <div class="col-lg-1">

        <a asp-action="Create" class="btn btn-primary pull-right"><i class="fa fa-plus"> Create New</i></a>


    </div>


</div>
<hr />


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Product List
            </div>
            <div class="panel-body">
                <div class="dataTable_wrapper table-responsive"> 
                    <table id="tbl_product" class="table table-striped table-bordered table-hover display nowrap">
                        <thead>
                            <tr>
                                <th>
                                    <input type="checkbox" value="1" id="chkpro_all">
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Code)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ShortDesc)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LongDesc)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MinStock)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MaxStock)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Cost)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MarkupAmount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MarkupPercent)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Price)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Vatable)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Barcode)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Stock)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Active)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Cat3Description)
                                </th>
                             
                                <th>
                            Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="">
                                    <td>
                                        <input type="checkbox" value="1" class="checkbox">
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Code)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ShortDesc)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LongDesc)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MinStock)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaxStock)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cost)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MarkupAmount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MarkupPercent)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Vatable)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Barcode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Stock)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Active)
                                    </td>
                                    
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cat3Description)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
 




