@model System.Infrastructure.Models.ProductModel

@{
    ViewData["Title"] = "Details";
}
<div class="row">

    <div class="col-lg-6">
        <br />
        <h4>Product</h4>
    </div>

    <div class="col-lg-3">

    </div>
    <div class="col-lg-3">
        <br />
        <i class="fa fa-arrow-circle-left pull-right">  <a asp-action="index" class="pull-right">  Back to Product List</a></i>

    </div>


</div>
<hr />

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Product Details
            </div>
            <div class="panel-body">

                <div class="row">
                    <div class="col-lg-6">

                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.Code) :
                            @Html.DisplayFor(model => model.Code)
                        </div>

                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.ShortDesc):
                            @Html.DisplayFor(model => model.ShortDesc)
                        </div>


                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>

                <div class="row">
                    <div class="col-lg-6">

                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.LongDesc) :
                            @Html.DisplayFor(model => model.LongDesc)
                        </div>

                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.MinStock):
                            @Html.DisplayFor(model => model.MinStock)
                        </div>


                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <div class="row">
                    <div class="col-lg-6">

                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.MaxStock) :
                            @Html.DisplayFor(model => model.MaxStock)
                        </div>

                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.Cost):
                            @Html.DisplayFor(model => model.Cost)
                        </div>


                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <div class="row">
                    <div class="col-lg-6">

                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.MarkupAmount) :
                            @Html.DisplayFor(model => model.MarkupAmount)
                        </div>

                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.MarkupPercent):
                            @Html.DisplayFor(model => model.MarkupPercent)
                        </div>


                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <div class="row">
                    <div class="col-lg-6">

                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.Price) :
                            @Html.DisplayFor(model => model.Price)
                        </div>

                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.Vatable):

                            @Html.DisplayFor(model => model.Vatable)
                        </div>


                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <div class="row">
                    <div class="col-lg-6">

                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.Barcode) :
                            @Html.DisplayFor(model => model.Barcode)
                        </div>

                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.Stock):
                            @Html.DisplayFor(model => model.Stock)
                        </div>


                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <div class="row">
                    <div class="col-lg-6">

                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.Active) :
                            @Html.DisplayFor(model => model.Active)
                        </div>

                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.Cat3Description):
                            @Html.DisplayFor(model => model.Cat3Description)
                        </div>


                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>


                <div class="row">
                    <div class="col-lg-6">

                        <div class="form-group">

                        </div>

                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    <div class="col-lg-6">

                        <a asp-action="Edit" class="btn btn-primary pull-right" asp-route-id="@Model.ID"> Go to Edit</a>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>

                <!-- /.row (nested) -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


 
