@model System.Infrastructure.Models.ProductModel

@{
    ViewData["Title"] = "Create";
}

<div class="row">

    <div class="col-lg-6">
        <br />
        <h4>Product</h4>
    </div>

    <div class="col-lg-3">

    </div>
    <div class="col-lg-3">
        <br />
        <i class="fa fa-arrow-circle-left pull-right">  <a asp-action="index" class="pull-right">  Back to Product List</a></i>

    </div>


</div>
<hr />

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Create  Product
            </div>
            <div class="panel-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-lg-6">

                            <div class="form-group">

                                <label asp-for="Code" class="control-label"></label>
                                <input asp-for="Code" class="form-control" />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>

                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="ShortDesc" class="control-label"></label>
                                <input asp-for="ShortDesc" class="form-control" />
                                <span asp-validation-for="ShortDesc" class="text-danger"></span>
                            </div>

                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <div class="row">
                        <div class="col-lg-6">

                            <div class="form-group">
                                <label asp-for="LongDesc" class="control-label"></label>
                                <input asp-for="LongDesc" class="form-control" />
                                <span asp-validation-for="LongDesc" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="col-lg-6">

                            <div class="form-group">
                                <label asp-for="Cat3ID" class="control-label"></label>
                                <select asp-for="Cat3ID" class="form-control" asp-items="ViewBag.Category3"></select>
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="MinStock" class="control-label"></label>
                                <input asp-for="MinStock" class="form-control" />
                                <span asp-validation-for="MinStock" class="text-danger"></span>
</div>

                            </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="MaxStock" class="control-label"></label>
                                <input asp-for="MaxStock" class="form-control" />
                                <span asp-validation-for="MaxStock" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="Cost" class="control-label"></label>
                                <input asp-for="Cost" class="form-control" />
                                <span asp-validation-for="Cost" class="text-danger"></span>

                                </div>
                            </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="MarkupAmount" class="control-label"></label>
                                <input asp-for="MarkupAmount" class="form-control" />
                                <span asp-validation-for="MarkupAmount" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="MarkupPercent" class="control-label"></label>
                                <input asp-for="MarkupPercent" class="form-control" />
                                <span asp-validation-for="MarkupPercent" class="text-danger"></span>
                               </div>

                            </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="Vatable" class="control-label"></label>
                                <input asp-for="Vatable" class="form-control" />
                                <span asp-validation-for="Vatable" class="text-danger"></span>
                                </div>
                            </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="Barcode" class="control-label"></label>
                                <input asp-for="Barcode" class="form-control" />
                                <span asp-validation-for="Barcode" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="Stock" class="control-label"></label>
                                <input asp-for="Stock" class="form-control" />
                                <span asp-validation-for="Stock" class="text-danger"></span>
                                </div>
                            </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="Active" class="control-label"></label>
                                <input asp-for="Active" class="form-control" />
                                <span asp-validation-for="Active" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    <div class="row">
                        <div class="col-lg-6">
                       </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary pull-right" />
                                </div>
                            </div>
                        </div>
                    <!-- /.row (nested) -->
                </form>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
